{
  "name": "sage-agent",
  "version": "0.1.0",
  "description": "Sage Agent - LLM-based agent for software engineering tasks with modern terminal UI",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "sage": "dist/index.js"
  },
  "scripts": {
    "build": "tsc && npm run bundle",
    "bundle": "esbuild dist/index.js --bundle --platform=node --format=esm --outfile=dist/bundle.js --external:ink --external:react --banner:js=\"import { createRequire } from 'module'; const require = createRequire(import.meta.url);\"",
    "dev": "tsc --watch",
    "start": "node dist/index.js",
    "lint": "eslint . --ext .ts,.tsx",
    "format": "prettier --write .",
    "test": "vitest run",
    "typecheck": "tsc --noEmit",
    "build-rust": "cargo build --release",
    "build-all": "npm run build-rust && npm run build"
  },
  "files": [
    "dist",
    "target/release/sage-core"
  ],
  "dependencies": {
    "ink": "^6.0.1",
    "ink-spinner": "^5.0.0",
    "ink-select-input": "^6.2.0",
    "ink-big-text": "^2.0.0",
    "ink-gradient": "^3.0.0",
    "ink-link": "^4.1.0",
    "ink-text-input": "^6.0.0",
    "react": "^19.1.0",
    "chalk": "^5.3.0",
    "cli-spinners": "^3.2.0",
    "string-width": "^7.1.0",
    "strip-ansi": "^7.1.0",
    "yargs": "^17.7.2",
    "execa": "^9.0.0",
    "node-pty": "^1.0.0",
    "ws": "^8.18.0",
    "axios": "^1.6.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.24",
    "@types/react": "^19.1.8",
    "@types/yargs": "^17.0.32",
    "@types/ws": "^8.5.10",
    "eslint": "^9.0.0",
    "prettier": "^3.0.0",
    "typescript": "^5.3.3",
    "vitest": "^3.1.1",
    "ink-testing-library": "^4.0.0",
    "esbuild": "^0.19.0"
  },
  "engines": {
    "node": ">=20"
  }
}
